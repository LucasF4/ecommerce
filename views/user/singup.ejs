<%- include('../partials/head.ejs') %>
<style>
    .gradient-custom {
        /* fallback for old browsers */
        background: #6a11cb;

        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));

        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1))
    }
</style>
<body class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-dark text-white mb-5" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
  
              <div class="mb-md-5 mt-md-4 pb-5">
  
                <h2 class="fw-bold mb-2 text-uppercase">Sing Up</h2>
                <p class="text-white-50 mb-5">Please enter your email and password!</p>
  
                <form action="/sing-up" method="POST">
                    <div class="form-outline form-white mb-4">
                        <%if(erro){%>
                            <div class="alert alert-danger" role="alert">
                                <%=erro%>
                            </div>
                        <%}%>

                        <div class="form-outline form-white mb-4">
                            <input value="<%= nome %>" type="text" name="nome" class="form-control form-control-lg" required />
                            <label class="form-label">Username</label>
                          </div>

                          <div class="form-outline form-white mb-4">
                            <input value="<%= email %>" type="email" name="email" class="form-control form-control-lg" required />
                            <label class="form-label">Email</label>
                          </div>

                        <div class="form-outline form-white mb-4">
                            <input type="password" name="senha" id="senha" class="form-control form-control-lg" required />
                            <label class="form-label">Password</label>
                          </div>
                      </div>
        
                      <div class="form-outline form-white mb-4">
                        <input type="password" id="confirmSenha" class="form-control form-control-lg" required />
                        <label class="form-label">Confirm Password</label>
                      </div>

                      <div class="form-outline form-white mb-4">
                        <input type="text" value="<%= numero %>" name="numero" id="telefone" class="form-control form-control-lg" maxlength="15" required />
                        <label class="form-label" for="telefone">Phone</label>
                      </div>
        
                      <button class="btn btn-outline-light btn-lg px-5" type="submit">Sing Up</button>
                      <a class="btn btn-outline-light btn-lg px-5" href="/sing-in">Back</a>
                </form>
  
              </div>
  
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
        var pass = document.getElementById('senha')
        var confirpassword = document.getElementById('confirmSenha')
    
        function validatePassword(){
            if(pass.value != confirpassword.value){
                confirpassword.setCustomValidity('Senhas Diferentes!')
            }else{
                confirpassword.setCustomValidity("")
            }
        }
    
        pass.onchange = validatePassword;
        confirpassword.onkeyup = validatePassword;

        const input = document.getElementById('telefone')
        input.addEventListener('keypress', () => {
            let inputlength = input.value.length
            if(inputlength === 0){
                input.value += "("
            }
            if(inputlength === 3){
                input.value += ")" + " "
            }
            if(inputlength === 10){
                input.value += "-"
            }
        })
        
    </script>
  </body>

  