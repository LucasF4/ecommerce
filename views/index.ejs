<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>empadaodaamandinha</title>

    <!-- CSS BOOTSTRAP-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
    crossorigin="anonymous">

    <!-- CSS Do Projeto -->
    <link href="/css/main.css" rel="stylesheet">

    <!-- SCRIPT BOOTSTRAP-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
</head>

<body>

    <header class="main-header mb-4">
        
        <%- include('partials/navuser.ejs') %>
       
    </header>

        <section class="my-5 py-5">
            <div class="container">
                
                    <div class="row ">
                        <% products.forEach(function(products){ %>
                        <div class="col-md-4 mt-2 col-sm-6 col-lg-3">
                            <div class="p-3 border bg-light">
                                <img src="assets/empadao.png" class="img-thumbnail " />
                                <p class="mt-3 text-center text-nowrap fs-6" style="font-weight: bold;"><%= products.nome %></p>
                                <p class="mt-3 fs-6""><%= products.composition %></p>
                                <p class="mt-3 text-nowrap fs-6">Valor: <%= products.preco.replace('.', ',') %></p>
                                <a class="btn btn-outline-success" href="/carrinho">Carrinho</a>
                            </div>
                        </div>
                        <% }) %>
                    </div>
            </div>
        </section>
    
</body>

</html>