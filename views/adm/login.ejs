<%- include('../partials/head.ejs') %>
<style>
    @keyframes load{
        to{transform: rotate(360deg)}
    }
    .pre{
        animation: load 2s infinite linear;
    }
</style>


<body>
    

    <div id="loading" class="position-absolute top-50 start-50 translate-middle" style="display: block;">
        <img class="pre ms-3" src="https://ilustracode.com.br/assets/images/load.png">
        <h4 class="mt-3">Carregando...</h4>
    </div>

    <div id="conteudo" class="row" style="display: none;">
        <div class="container mt-5"><h1 class="text-center">Login Administrativo</h1></div>
        <div class="card position-absolute top-50 start-50 translate-middle" style="width: 30rem;">
            <form class="card-body mt-4" method="POST" action="/loginAdm">
                <%if(erro){%>
                    <div class="alert alert-danger" role="alert">
                        <%=erro%>
                    </div>
                <%}%>
                <div class="mb-3">
                    <label for="email" class="form-label">Endere√ßo de email</label>
                    <input type="email" class="form-control" id="email" aria-describedby="emailHelper" name="email" placeholder="Informe aqui o seu e-mail!"/>
                </div>
                <div class="mb-3">
                    <label for="senha" class="form-label">Senha</label>
                    <input type="password" class="form-control" id="senha" aria-describedby="senhaHelper" name="senha" placeholder="Informe aqui a sua Senha"/>
                </div>
                <div class="row">
                    <button class="col-8 mx-auto btn btn-success mt-4" type="submit" >Fazer Login</button>
                </div>
            </form>
        </div>
    </div>

<script>
    var i = setInterval(function(){
        clearInterval(i);
        document.getElementById('loading').style.display = 'none'
        document.getElementById('conteudo').style.display = 'inline'
    }, 1000);
</script>